<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onetwentyonegwatt.measuretrack.ViewBasicFragment"
    android:background="@color/material_blue_grey_900">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/fragBasicMeasurement"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/background_material_light" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginTop="90sp"
        android:textStyle="bold"
        android:id="@+id/lblName"
        android:textColor="@color/background_floating_material_light" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Value"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:layout_below="@+id/lblName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblValue"
        android:textColor="@color/background_floating_material_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtValue"
        android:layout_below="@+id/lblValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Value"
        android:textColor="@color/background_floating_material_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtName"
        android:layout_below="@+id/lblName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Name"
        android:textColor="@color/background_floating_material_light" />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Back (save)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnBack"
        android:background="@color/button_material_dark"
        android:drawableLeft="@drawable/ic_action_send"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/txtValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/abc_ic_clear_mtrl_alpha"/>


</RelativeLayout>
